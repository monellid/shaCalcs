package org.gem.engine.risk.core.event.listener;

import static org.gem.engine.core.AdditionalPipeKeys.COUNTRY;

import org.gem.engine.core.Site;
import org.gem.engine.core.cache.Cache;
import org.gem.engine.core.cache.Pipe;
import org.gem.engine.core.event.Filter;
import org.gem.engine.core.reader.DiscreteVulnerabilityFunctionReader;
import org.gem.engine.core.reader.VulnerabilityCodeReader;
import org.gem.engine.data.DiscreteVulnerabilityFunction;
import org.gem.engine.data.country.Country;

/**
 * Loads a {@link DiscreteVulnerabilityFunction} in the {@link Pipe}, using the current {@link Site}.
 * 
 * @author Andrea Cerisara
 * @version $Id: DiscreteVulnerabilityFunctionLoader.java 567 2010-07-20 10:10:52Z acerisara $
 */
public class DiscreteVulnerabilityFunctionLoader extends Filter
{

    private final String key;
    private final VulnerabilityCodeReader codes;
    private final DiscreteVulnerabilityFunctionReader functions;

    /**
     * @param codes the reader used to load vulnerability codes
     * @param functions the reader used to load vulnerability functions
     * @param key the key used to store the loaded function in the pipe
     */
    public DiscreteVulnerabilityFunctionLoader(VulnerabilityCodeReader codes,
            DiscreteVulnerabilityFunctionReader functions, String key)
    {
        this.key = key;
        this.codes = codes;
        this.functions = functions;
    }

    @Override
    protected void filter(Cache buffer, Pipe pipe)
    {
        Country country = pipe.get(COUNTRY);
        pipe.put(key, functions.readByCode(codes.readByAdminCode(country.getCode())));
    }

}
