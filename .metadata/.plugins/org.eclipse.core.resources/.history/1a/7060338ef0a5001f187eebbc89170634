package org.gem.engine.core.event.listener.prob;

import static org.gem.engine.risk.core.AdditionalPipeKeys.MEAN_LOSS_RESULT;
import static org.junit.Assert.assertNotNull;

import org.gem.engine.risk.core.event.listener.BaseFilterTest;
import org.gem.engine.risk.core.event.listener.prob.MeanLossCalculator;
import org.gem.engine.risk.data.FixedDiscreteFunction;
import org.junit.Before;
import org.junit.Test;

public class MeanLossCalculatorTest extends BaseFilterTest
{

    @Before
    public void setUp()
    {
        addToPipe(A_KEY, new FixedDiscreteFunction());
        filter = new MeanLossCalculator(A_KEY);
    }

    @Test
    public void shouldComputeAndSaveTheMeanLoss()
    {
        runOn(anySite());
        assertNotNull(pipeValueAtKey(MEAN_LOSS_RESULT));
    }

}
